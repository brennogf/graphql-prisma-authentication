{
  "name": "node-setup",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Brenno Givigier <brennogivigier@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --poll --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "pretest": "NODE_ENV=test yarn prisma migrate dev",
    "test": "NODE_ENV=test jest --forceExit",
    "lint": "eslint src --ext ts --ignore-path .prettierignore",
    "format": "prettier \"**/*.+(ts)\" --write"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.3.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.5.3",
    "graphql-request": "^3.6.0",
    "hooks": "^0.3.2",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.3",
    "prettier": "^2.0.5",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@prisma/client": "^3.2.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "graphql": "^15.6.1",
    "graphql-import": "^1.0.2",
    "graphql-middleware": "^6.1.8",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
